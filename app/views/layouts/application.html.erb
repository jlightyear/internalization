<!DOCTYPE html>
<html>
<head>
  <title>Internalization</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'I18n', root_path, class: 'navbar-brand' %>
      </div>
 
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t('menu.new_article'), new_article_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
            <%= t('menu.languages.lang') %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <%= link_to t('menu.languages.es'), change_locale_path(:es) %>
            </li>
            <li>
              <%= link_to t('menu.languages.ca'), change_locale_path(:ca) %>
            </li>
            <li>
              <%= link_to t('menu.languages.en'), change_locale_path(:en) %>
            </li>
          </ul>
        </li>
      </ul>

    </div>
  </div>
 
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
 
    <div class="page-header">
      <h1><%= yield :page_header %></h1>
    </div>
 
    <%= yield %>
  </div>
</body>
</html>
